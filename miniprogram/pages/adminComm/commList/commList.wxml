<table scrollX="{{true}}" scrollViewHeight="calc(100vh - 114rpx)" bindscrolltolower="getList" class="basic-table" columns="{{tableColumns}}" dataList="{{dataList}}" getListLoading="{{isLoad}}" showTipImage="{{dataList.length===0&&!isLoad}}" bindclicklistitem="handleClickItem" rowKey="_id" />
<view class="addBtn cuIcon-add" bindtap="addBtnHandle"></view>
<view class="cu-modal {{showInfo?'show':''}}">
  <view class="cu-dialog">
    <view class="item-content">
      <view class="item-body">
        <view class="cu-list menu sm-border">
          <view class="cu-item">
            <view class="content">
              <text class="text-grey">标题</text>
            </view>
            <view class="action">
              <text class="text-grey">{{dataInfo.title}}</text>
            </view>
          </view>
          <view class="cu-item">
            <view class="content">
              <text class="text-grey">图片</text>
            </view>
            <view class="action">
              <block wx:for="{{questionList}}">
                <image src="{{item}}" mode="aspectFill" data-imglist="{{dataInfo.imgList}}" data-url="{{item}}" bindtap="ViewImage"></image>
              </block>
            </view>
          </view>
          <view class="cu-item">
            <view class="content">
              <text class="text-grey">内容</text>
            </view>
            <view class="action">
              <text class="text-grey">{{question.title}}</text>
            </view>
          </view>
          <view class="cu-item">
            <view class="content">
              <text class="text-grey">点赞数</text>
            </view>
            <view class="action">
              <text class="text-grey">{{dataInfo.likeNum}}</text>
            </view>
          </view>
          <view class="cu-item">
            <view class="content">
              <text class="text-grey">阅读数</text>
            </view>
            <view class="action">
              <text class="text-grey">{{dataInfo.readNum}}</text>
            </view>
          </view>
          <view class="cu-item">
            <view class="content">
              <text class="text-grey">加入时间</text>
            </view>
            <view class="action">
              <text class="text-grey">{{dataInfo.date}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="cu-bar bg-white">
      <view class="action margin-0 flex-sub  solid-left" bindtap="hideModal">了解</view>
    </view>
  </view>
</view>